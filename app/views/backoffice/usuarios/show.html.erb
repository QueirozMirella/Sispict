

<div class="container usuario_list">
   <h1>Usuário <%= "##{@usuario.id}" %></h1>
      <hr />

      <div class="row center-content">


      <div class="col-md-4">
        <div class="x_panel">
          <div class="x_title">
            <h2>Usuário <%= "##{@usuario.id}" %>
            </h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                <a class="collapse-link">
                  <i class="fa fa-chevron-up"></i>
                </a>
              </li>
              <li>
                <a class="close-link">
                  <i class="fa fa-close"></i>
                </a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
              <article class="media event">
                <div class="media-body">
                  <h2><%= "#{@usuario.nome} #{@usuario.sobrenome}" %></h2>
                  <hr />
                  <p><span>CPF:</span> <%= @usuario.cpf.numero %></p>
                  <p>
                    <span>TELEFONE:</span> <%= @usuario.telefone %>
                  </p>
                  <p>
                    <span>CELULAR:</span>
                    <%= @usuario.celular %>
                  </p>
                  <p>
                    <span>MATRÍCULA:</span> <%= @usuario.matricula %>
                  </p>

                  <p>
                <%= link_to "#{t('buttons.edit')}", edit_backoffice_usuario_path(@usuario), class: 'btn btn-info btn-lg' %>
                  <%= link_to t('buttons.back'), backoffice_usuarios_path, class: 'btn btn-info btn-lg' %>
                 </p>

                  <p>
                    <span>DATA DE NASCIMENTO</span> <%= @usuario.data_de_nascimento %>
                  </p>
                  <p>
                    <span>C.R.</span>
                    <%= @usuario.cr %>
                  </p>
                  <p>
                    <span>LATTES</span>
                    <a href="<%= @usuario.lattes %>" target="_blank" alt="Link do Currículo Lattes"><%= @usuario.lattes.upcase %></a>
                  </p>
                  <p>
                    <span>PERMISSÕES DO USUÁRIO</span>
                    <%= @usuario.roles_name.upcase %>
                  </p>
                  <br />

                </div>
              </article>

          </div>
        </div>
      </div>

    </div>
</div>