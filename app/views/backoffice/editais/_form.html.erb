<%= form_for [:backoffice, @edital], html: { class: 'form-horizontal form-label-left' } do |f| %>
  <% if edital.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{pluralize(edital.errors.count, 'error')} #{t('message.errors')}"%></h2>

      <ul>
      <% edital.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <div class="col-md-9 col-sm-9 col-xs-12">
      <h4>Dados do Edital</h4>
      <hr>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :inicio, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.date_field :inicio, id: "datepicker", class: 'date-picker form-control col-md-7 col-xs-12 active' %>
      <ul class="parsley-errors-list" id="parsley-id-3782"></ul>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :termino, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.date_field :termino, class: 'date-picker form-control col-md-7 col-xs-12 active' %>
      <ul class="parsley-errors-list" id="parsley-id-3782"></ul>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :cr, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.number_field :cr, in: 0.0..10.0, step: 0.1, class: 'form-control col-md-7 col-xs-12' %>
      <ul class="parsley-errors-list" id="parsley-id-3782"></ul>
    </div>
  </div>

    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">Modalidade</label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.select :modalidades, options_for_select(Edital.modalidade_attributes_for_select), {}, { class: ' form-control col-md-6 col-sm-6 col-xs-12'} %>
      </div>
    </div>

   <div class="form-group">
    <%= f.label :descricao, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-9 col-sm-9 col-xs-12">
        <%= f.text_area :descricao, class: 'col-md-6 col-sm-6 col-xs-12' %>
      </div>
  </div> 

  <div class="form-group">
    <%= f.label :asset, 'Arquivo(*.pdf)', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-9 col-sm-9 col-xs-12">
        <%= f.file_field :asset, class: 'col-md-6 col-sm-6 col-xs-12' %>
      </div>
  </div>

        <%= f.hidden_field :asset_cache, value: @edital.asset_cache, class: 'col-md-6 col-sm-6 col-xs-12' %>


  <div id="bolsas">
  <%= f.fields_for :bolsas do |bolsa| %>

  

  <div class="form-group">
      <div class="col-md-9 col-sm-9 col-xs-12">
            <h4>Dados da Bolsa</h4>
            <hr>
      </div>
  </div>

     <div class="links"><%= link_to_add_association '+ Adicionar Bolsas'.html_safe, f, :bolsas, class: 'btn btn-primary' %></div>

    <% end %>
    </div>



  <div class="form-group">
    <div class='control-label col-md-3 col-sm-3 col-xs-12'>
      <%= f.submit class: 'btn btn-info btn-lg' %>
    </div>
  </div>
<% end %>
