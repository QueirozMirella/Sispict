

<h1>Laboratorios</h1>

<%= link_to "Cadastrar Laboratório", new_predio_laboratorio_path(@predio), class: 'btn btn-info btn-lg' %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @laboratorios.each do |laboratorio| %>
      <tr>
        <td><%= laboratorio.nome %></td>
        <td><%= link_to 'Mostrar', [:backoffice, @predio, laboratorio] %></td>
        <td><%= link_to 'Editar', [:backoffice, :edit, @predio, @laboratorio] %></td>
        <td><%= link_to 'Excluir', [:backoffice, @predio, laboratorio], method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>