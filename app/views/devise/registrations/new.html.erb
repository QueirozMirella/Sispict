<div class="registrations_new">
    <h2>Cadastre-se</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-devise' }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="input-field">
        <%= f.label 'E-mail' %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
    
      <div class="input-field">
        <%= f.label 'Senha' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres mÃ­nimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    
      <div class="input-field">
        <%= f.label 'Confirme sua senha' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    
      <div class="input-field">
        <%= f.label 'Nome' %><br />
        <%= f.text_field :nome %>
      </div>
    
      <div class="input-field">
        <%= f.label 'Sobrenome' %><br />
        <%= f.text_field :sobrenome %>
      </div>
    
      <div class="input-field">
        <%= f.label 'CPF' %><br />
        <%= f.text_field :cpf %>
      </div>
    
      <div class="input-field">
        <%= f.label 'Telefone' %><br />
        <%= f.text_field :telefone %>
      </div>
    
      <div class="input-field">
        <%= f.label 'Celular' %><br />
        <%= f.text_field :celular %>
      </div>
    
      <div class="input-field">
        <%= f.label 'MatrÃ­cula' %><br />
        <%= f.text_field :matricula %>
      </div>
    
      <div class="input-field">
        <%= f.label 'Data de Nascimento' %><br />
        <%= f.date_field :data_de_nascimento %>
      </div>
    
      <div class="input-field">
        <%= f.label 'CR' %><br />
        <%= f.number_field :cr %>
      </div>
    
      <div class="input-field">
        <%= f.label 'Lattes' %><br />
        <%= f.text_field :lattes %>
      </div>
    
      <div class="actions">
        <%= f.submit "Cadastrar", class: 'btn waves-effect waves-light blue' %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>    
</div>